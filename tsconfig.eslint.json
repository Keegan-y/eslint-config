{
  "extends": "./tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/.next/**",
    "**/.out/**",
    "**/.rn_temp/**",
    "**/.storybook-out/**",
    "**/.temp/**",
    "**/.tmp/**",
    "**/.umi/**",
    "**/.umi-production/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/build/**",
    "**/coverage/**",
    "**/dist/**",
    "**/dist-ssr/**",
    "**/out/**",
    "**/public/**",
    "**/scripts/**",
    "**/storybook-static/**",
    "**/temp/**",
    "**/tmp/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
